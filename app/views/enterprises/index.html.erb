<h1>Empresas</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Holding</th>
      <th>Nombre empresa</th>
      <th>Display empresa</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @enterprises.each do |enterprise| %>
      <tr>
        <td><%= enterprise.id %></td>
        <td><%= enterprise.holding_id %></td>
        <td><%= enterprise.nombre_empresa %></td>
        <td><%= enterprise.display_empresa %></td>
        <td><%= link_to 'Show', enterprise %></td>
        <td><%= link_to 'Edit', edit_enterprise_path(enterprise) %></td>
        <td><%= link_to 'Destroy', enterprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

